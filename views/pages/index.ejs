
<%- include('../partials/head') %>
<%- include('../partials/header') %>
<main>
<div id="tabed"class="tabs is-centered">
    <ul>
        <li data-target="appointment">
            <a>Choose Appointment</a>
        </li>
        <li data-target="info">
            <a >Your Info</a>
        </li>
        <li data-target="conf">
            <a >Confirmation</a>
        </li>
    </ul>
  </div>
  <div class="px-2" id="tab-content">
    <div id="appointment" class="has-background-warning">
        <h3 class="is-size-5- title  is-align-items-center  is-justify-content-center is-align-self-center ">Select Service</h3>
        <div class="calendar has-background-info hero is-medium is-align-items-center">
            <div class="hero-body is-justify-content-center">
                <form>
                    <div>
                      <label class="tag is-size-5"for="party">Choose your preferred party date and time (required, June 1st 8.30am to June 30th 4.30pm):</label>
                      <input id="party" type="datetime-local" name="partydate"
                             min="2017-06-01T08:30" max="2017-06-30T16:30"
                             pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" 
                             class="input has-background-light is-medium"
                             required>
                    </div>
                    <div>
                      <input type="submit" value="Book party!"class="button is-grey-light">
                    </div>
                    <input type="hidden" id="timezone" name="timezone" value="-08:00">
                  </form>
                  
              </div>
        </div>
    </div>
    <div id="info" class="is-hidden">
        <h3 class="is-size-5- title ">info</h3>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Debitis, minima!</p>
    </div>
    <div id="conf" class="is-hidden">
        <h3 class="is-size-5 title">conf</h3>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Debitis, minima!</p>
    </div>
  </div>
